<header>
  <a href="/" class="logo">RESTaurant</a>
  <nav>
    <div id="navcontainer">
      <ul>
        <li>
          <a href="/foods">MENU</a>
        </li>
            <form action="/sessions" method="post" class="logout-form">
              <input type="hidden" name="_method" value="delete">
              <input type="submit" value="LOG OUT">
            </form>
      </ul>
    </div>
  </nav>
</header>


<div class="partyshow-wrapper">



<div class="party-edit-cancel">
	<ul>
		<li>
			<h3><%= @party.name.upcase %>: <%= @party.size_of_party %> guests</h3>
		</li>
		<br>
		<div class="editcancel">
			( <a href="/parties/<%= @party.id %>/edit">edit</a> )
			(<form action="/parties/<%= @party.id %>" method="post" class="cancelres-form">
				<input type="hidden" name="_method" value="delete">
				<input type="submit" value="cancel reservation">
			</form>)
		</div>
	</ul>
</div>




<div class="pure-g">

	<div class="selectfood-addorder pure-u-1-2">
		<form action="/parties/<%= @party.id %>/orders" method="post">
			<ul>
			SELECT A FOOD ITEM:
				<% @foods.each do |food| %>
					<ul>
						<li>
							<input type="radio" name="food_name" value="<%= food.name %>"> <%= food.name %>
						</li>
					</ul>
			 	<% end %>
			</ul>
			<div class="myButton2">
			<input type="submit" value="ADD TO ORDER" class="pure-button">
			</div>
		</form>
	</div>

<div class="orders-x-dontlikethis pure-u-1-2">
	<table id="orders-table">
	<tr>
		<th colspan="3">
		--  O R D E R S  --
		</th>
	</tr>
		<% @party.orders.each do |order| %>
		<tr>
			<td width="50%">
				<%= order.food.name %>
			</td>
			<td width="20%">
				<form action="/parties/<%=@party.id%>/orders" method="post">
					<input type="hidden" name="order_id" value="<%= order.id %>">
					<input type="hidden" name="_method" value="delete">
						<input type="submit" value="X">
				</form>
			</td>
			<td width="30%">
				<form action="/orders/<%= order.id %>/dontlikethis" method="post">
					<input type="hidden" name="_method" value="patch">
						<input type="submit" onclick="return confirm('OK - no charge')" value="don't like this">
				</form>
			</td>
			<% end %>	
		</tr>
	</table>
</div>











</div>


<a href="/parties/<%= @party.id %>/receipt">C H E C K O U T</a>


</div>
